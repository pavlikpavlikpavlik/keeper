{% extends 'base.html.twig' %}

{% block title %}Редактировать категорию{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card-custom">
            <!-- Заголовок с навигацией -->
            <div class="d-flex align-items-center mb-4">
                <div class="flex-grow-1">
                    <h1 class="h3 mb-0">
                        <i class="fas fa-edit me-2" style="color: #007aff;"></i>Редактировать категорию
                    </h1>
                    <p class="text-muted mb-0">Измените данные категории</p>
                </div>
                <a href="{{ path('app_category_index') }}" class="btn btn-smooth" 
                   style="background: transparent; color: #6c757d; border: 1px solid #d2d2d7;"
                   title="Вернуться к списку категорий"
                   data-bs-toggle="tooltip">
                    <i class="fas fa-arrow-left me-1"></i> Назад
                </a>
            </div>

            <!-- Форма редактирования -->
            {{ include('category/_form.html.twig', {'button_label': 'Обновить'}) }}

            <!-- Разделитель и кнопка удаления -->
            <div class="mt-4 pt-4 border-top">
                <div class="text-center">
                    <p class="text-muted mb-3">Или удалите категорию</p>
                    {{ include('category/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}